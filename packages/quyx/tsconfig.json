{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"ESNext",
			"dom"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"types": [
			"vinxi/client",
			"./global.d.ts"
		]
	},
	"include": [
		"config",
		"client",
		"server",
		"shared",
		"router",
		"global.d.ts",
	]
}